<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="TEMPMONWRITER" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="logs/tempmon.log"/>
        <param name="Append" value="true"/>
        <param name="Encoding" value="UTF-8"/>
        <param name="bufferedIO" value="false"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss,SSS} [%t] %-5p %c{1}: %m%n"/>
        </layout>
    </appender>

    <appender name="TEMPMON" class="org.apache.log4j.AsyncAppender">
        <param name="Threshold" value="DEBUG"/>
        <param name="BufferSize" value="0"/>
        <appender-ref ref="TEMPMONWRITER"/>
    </appender>

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="WARN"/>
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %X{userid} %c: %m%n"/>
        </layout>
    </appender>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/>
        </layout>
    </appender>

    <logger name="tempmon">
        <level value="DEBUG"/>
        <appender-ref ref="TEMPMONWRITER"/>
    </logger>

    <root>
        <priority value ="WARN"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</log4j:configuration>
